{
  "name": "web",
  "private": true,
  "scripts": {
    "cscript": "tsc scripts/widget-client.ts --outDir public",
    "generate": "dotenv -c local -- graphql-codegen",
    "dev": "pnpm cscript --watch --preserveWatchOutput & next dev -p 3030",
    "build": "pnpm cscript && next build",
    "start": "next start",
    "lint": "stylelint '**/*.{css,scss}' && eslint . --cache --max-warnings 0",
    "lint:fix": "stylelint --fix '**/*.{css,scss}' && eslint --fix . --cache --max-warnings 0",
    "format": "prettier --write \"**/*.+(ts|tsx)\"",
    "prebuild": "dotenv -c production -- graphql-codegen",
    "prepare": "husky install",
    "test": "npx playwright test"
  },
  "dependencies": {
    "@szhsin/react-menu": "^3.0.2",
    "@tanstack/react-query": "^4.14.1",
    "@tanstack/react-query-devtools": "^4.14.1",
    "@tanstack/react-table": "^8.5.5",
    "clsx": "^1.2.1",
    "graphql": "^16.5.0",
    "little-state-machine": "^4.2.3",
    "next": "13.0.0",
    "next-i18next": "12.1.0",
    "next-pwa": "^5.4.6",
    "postcss": "^8.3.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.2",
    "react-hook-form": "^7.36.1",
    "react-icons": "^4.3.1",
    "react-markdown": "^8.0.3",
    "react-table": "^7.8.0",
    "react-toastify": "^8.2.0",
    "sass": "^1.48.0",
    "webpack": "^5.74.0"
  },
  "devDependencies": {
    "@babel/core": "^7.19.6",
    "@graphql-codegen/add": "^3.2.1",
    "@graphql-codegen/cli": "^2.16.1",
    "@graphql-codegen/typescript": "^2.8.1",
    "@graphql-codegen/typescript-operations": "^2.5.6",
    "@graphql-codegen/typescript-react-query": "^4.0.5",
    "@playwright/test": "^1.29.2",
    "@types/node": "18.11.9",
    "@types/react": "18.0.24",
    "@types/react-dom": "^18.0.8",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "babel-loader": "^9.1.0",
    "dotenv-cli": "^6.0.0",
    "eslint": "^8.26.0",
    "eslint-config-next": "^13.0.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "stylelint": "^14.14.0",
    "stylelint-config-standard-scss": "^6.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "graphql": {
    "schema": "https://api.staging.populist.us/"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.css": "stylelint --fix",
    "*.{js,css,md}": "prettier --write"
  },
  "optionalDependencies": {
    "@next/swc-linux-x64-gnu": "12.1.6"
  }
}
